<h3>Volunteer: <%= @volunteer.name %></h3>

<form action="/volunteers/<%= @volunteer.id %>/edit" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">Rename <%= @volunteer.name %>:</label>
  <input type="text" name="name">
  <button type="submit" name="button">Update Volunteer</button>
</form>

<form action="/volunteers/<%= @volunteer.id %>/edit" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" name="button">Delete <%= @volunteer.name %></button>
</form> <br>
