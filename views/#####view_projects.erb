<h2>Projects</h2>

<ol class="project_lister">
  <% @projects.each do |project| %>
  <li>
    <div class="project_box">

      <div class="left_col">
        <h3 class="project_title"><%= project.title %><h4>
          <a href="/projects/<%= project.id  %>/edit">Edit</a>
        </div>

        <div class="right_col">
          <p class="no_top_txt">Volunteers:</p>
          <% volunteers = project.volunteers %>
          <% if volunteers.any? %>
          <ul>
            <% volunteers.each do |volunteer| %>
            <li>
              <p><%= volunteer.name %></p>
            </li>
            <% end %>
          </ul>
          <% else %>
          <p>There are currently no volunteers to display</p>
          <% end %>
          <br>
          <% end %>
        </div>

      </div>
    </li>
  </ol>

  <a href="/">Back</a>
