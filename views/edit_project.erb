<h2>Editing Project: <%= @project.title %></h2>

<form class="rename_proj" action="/projects" method="post">
  <input name="_method" type="hidden" value="update">
  <label for="title">Rename Project:</label>
  <input type="text" name="title">
  <button type="submit" name="button">Rename</button>
</form>

<% volunteers = @project.volunteers %>
<% if volunteers.any? %>
<ul>
  <% volunteers.each do |volunteer| %>
  <li>
    <a class="volunteer_link" href="/volunteers/<%= volunteer.id %>"><%= volunteer.name %></a>
    <button type="delete" name="button">Delete</button>
  </li>
</ul>
<% end %>
<% else %>
<p>There are currently no volunteers to display</p>
<% end %>

<form class="delete_proj" action="index.html" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="button" name="button">Delete Project</button>
</form> <br>

<a href="/projects">Back</a>
