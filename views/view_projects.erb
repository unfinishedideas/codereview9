<h2>Projects</h2>

<ol>
  <% @projects.each do |project| %>
  <li>
    <h3 class="project_title"><%= project.title %><h4>
      <a href="/projects/<%= project.id  %>/edit">Edit project</a>
      <h4>Volunteers:</h4>
      <% volunteers = project.volunteers %>
      <% if volunteers.any? %>
      <ul>
        <% volunteers.each do |volunteer| %>
        <li>
          <a class="volunteer_link" href="/volunteers/<%= volunteer.id %>"><%= volunteer.name %></a>
        </li>
      </ul>
      <% end %>
      <% else %>
      <p>There are currently no volunteers to display</p>
      <% end %>
      <br>
    </li>
    <% end %>
  </ol>

<a href="/">Back</a>
